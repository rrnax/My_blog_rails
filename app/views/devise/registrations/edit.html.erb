<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br/>
  <div class="container" style="font-family: 'Peralta', cursive; width: 450px;">
    <div class="card">
      <div class="card-header bg-primary text-black bg-gradien fs-2 text-center">
        <h2>Edytuj dane</h2>
      </div>

        <div class="card-body">

          <div class="field my-5">
            <%= f.text_field :nick, autocomplete: "nick", class:"form-control", placeholder:"Nick" %>
          </div>

          <div class="field my-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field my-5">
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Nowe Hasło" %>
          </div>

          <div class="field my-5">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Potwierdź nowe hasło" %>
          </div>

          <div class="field my-5">
            <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"Aktualne hasło" %>
          </div>

      </div>
      <div class="card-footer bg-primary text-black bg-gradien fs-4 text-center">

          <div class="btn-group ">
            <%= f.submit "Zapisz", class:"btn btn-warning rounded-start" %>
            <%= link_to "Usuń moje konto", registration_path(resource_name), class:"btn btn-danger rounded-end ", data: {
                                turbo_method: :delete,
                                turbo_confirm: "Na pewno?"
                              }%>
          </div>

      </div>
    </div>
  </div>
<% end %>
